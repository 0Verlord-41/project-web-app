extends base

block content
  
  main.main
    .card-container

      each rest in rests
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`img/tours/${rest.images}`, alt=`${rest.name}`)
            h3.heading-tertirary
              span= rest.name

          .card__details
            h4.card__sub-heading= `${rest.Type}`
            p.card__text= rest.summary
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-map-pin')
              span= rest.Place
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-calendar')
              span April 2021
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-flag')
              span 3 stops
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-user')
              span= rest.Cooks

          .card__footer
            p
              span.card__footer-value= `Rs ${rest.price}`
              | 
              span.card__footer-text group
            p.card__ratings
              span.card__footer-value= rest.averagerating
              | 
              span.card__footer-text= `rating (${rest.ratings})`
            a.btn.btn--green.btn--small(href=`/rest/${rest.name}`) Details